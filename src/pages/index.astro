---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style lang="scss">
			@use '../styles/variables' as *;
			@use '../styles/mixins' as *;

			.home-page {
				@include container($max-width);
				padding: ($spacing-xl * 2) $spacing-md;
				margin-top: $spacing-xl;

				h1 {
					font-size: $font-size-4xl;
					font-weight: 700;
					margin-bottom: ($spacing-lg * 1.5);
				}

				p {
					margin-bottom: $spacing-lg;
				}

				a {
					color: rgb(var(--gray-dark));

					&:hover {
						text-decoration: underline;
					}
				}

				code {
					@include glass-effect(0.85, 10px, 0.2);
					padding: 2px $spacing-xs;
					border-radius: 2px;
					font-size: $font-size-sm;
				}

				ul {
					list-style: disc;
					list-style-position: inside;
					margin-bottom: $spacing-lg;

					li {
						margin-bottom: $spacing-sm;
					}
				}

				.intro-section {
					font-weight: 600;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main class="home-page">
			<h1>Thoughts on Data, and Life on Two Wheels</h1>
			<p>
				Hi, Iâ€™m Jinwoo Oh, a data engineer who loves blending logic and creativity.
				I write about data systems, civic tech, long-distance cycling, and anything else that sparks my curiosity.
			</p>

		</main>
		<Footer />
	</body>
</html>
