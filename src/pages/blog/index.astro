---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const allPosts = await getCollection('blog');
const posts = allPosts
	.filter(post => !post.data.draft)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Get all unique tags
const allTags = new Set<string>();
allPosts.forEach(post => {
	if (post.data.tags) {
		post.data.tags.forEach(tag => allTags.add(tag));
	}
});
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			.search-section {
				margin-bottom: 2rem;
				padding: 1rem;
				background: rgb(var(--gray-light));
				border-radius: 8px;
			}
			.search-input {
				width: 100%;
				padding: 0.75rem;
				border: 1px solid rgb(var(--gray));
				border-radius: 4px;
				font-size: 1rem;
			}
			.tags-filter {
				margin-top: 1rem;
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem;
			}
			.tag-filter {
				padding: 0.25rem 0.75rem;
				background: white;
				border: 1px solid rgb(var(--gray));
				border-radius: 1rem;
				cursor: pointer;
				transition: all 0.2s;
			}
			.tag-filter:hover,
			.tag-filter.active {
				background: rgb(var(--accent));
				color: white;
			}
			.post-tags {
				margin-top: 0.5rem;
				display: flex;
				flex-wrap: wrap;
				gap: 0.25rem;
			}
			.post-tag {
				background: rgb(var(--gray-light));
				color: rgb(var(--gray-dark));
				padding: 0.125rem 0.5rem;
				border-radius: 0.25rem;
				font-size: 0.75rem;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="search-section">
				<input type="text" id="searchInput" class="search-input" placeholder="Search posts..." />
				<div class="tags-filter">
					<div class="tag-filter active" data-tag="all">All</div>
					{Array.from(allTags).map(tag => (
						<div class="tag-filter" data-tag={tag}>{tag}</div>
					))}
				</div>
			</section>
			<section>
				<ul id="postsList">
					{
						posts.map((post) => (
							<li data-tags={post.data.tags?.join(',') || ''} data-title={post.data.title.toLowerCase()} data-description={post.data.description.toLowerCase()}>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
									{post.data.tags && (
										<div class="post-tags">
											{post.data.tags.map(tag => (
												<span class="post-tag">{tag}</span>
											))}
										</div>
									)}
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />

		<script>
			const searchInput = document.getElementById('searchInput');
			const postsList = document.getElementById('postsList');
			const tagFilters = document.querySelectorAll('.tag-filter');
			const posts = Array.from(postsList.children);

			let currentTag = 'all';

			// Search functionality
			searchInput.addEventListener('input', (e) => {
				const searchTerm = e.target.value.toLowerCase();
				filterPosts(searchTerm, currentTag);
			});

			// Tag filtering
			tagFilters.forEach(filter => {
				filter.addEventListener('click', () => {
					// Update active state
					tagFilters.forEach(f => f.classList.remove('active'));
					filter.classList.add('active');

					// Update current tag
					currentTag = filter.dataset.tag;

					// Filter posts
					filterPosts(searchInput.value.toLowerCase(), currentTag);
				});
			});

			function filterPosts(searchTerm, tag) {
				posts.forEach(post => {
					const title = post.dataset.title || '';
					const description = post.dataset.description || '';
					const tags = post.dataset.tags || '';

					const matchesSearch = !searchTerm ||
						title.includes(searchTerm) ||
						description.includes(searchTerm);

					const matchesTag = tag === 'all' || tags.includes(tag);

					if (matchesSearch && matchesTag) {
						post.style.display = 'block';
					} else {
						post.style.display = 'none';
					}
				});
			}
		</script>
	</body>
</html>
