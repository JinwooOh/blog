---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Comments from '../components/Comments.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

interface Props extends CollectionEntry<'blog'>['data'] {
	postSlug?: string;
}

const { title, description, pubDate, updatedDate, heroImage, tags, author, postSlug } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style lang="scss">
			@use '../styles/variables' as *;
			@use '../styles/mixins' as *;

			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0 auto;
			}

			.hero-image {
				@include container($max-width);
				margin: 0 auto $spacing-xl auto;
				padding: 0 $spacing-md;

				img {
					display: block;
					margin: 0 auto;
					width: 100%;
					height: auto;
					border-radius: $border-radius-large;
					box-shadow: var(--box-shadow);
				}
			}

			.prose {
				@include container($max-width);
				color: rgb(var(--gray-dark));
				padding: 0 0 $spacing-xl 0;
				font-size: 1.2rem; // Override body's 20px

				// Adjust heading sizes in blog content
				// Reduced sizes for better proportion with 1.2rem body text
				h1 {
					font-size: 1.35rem !important;
					font-weight: 600;
					margin-top: $spacing-xl;
					margin-bottom: $spacing-md;
				}

				h2 {
					font-size: 1.1rem !important;
					font-weight: 600;
					margin-top: $spacing-lg;
					margin-bottom: $spacing-sm;
				}

				h3 {
					font-size: 1rem !important;
					font-weight: 600;
					margin-top: $spacing-md;
					margin-bottom: $spacing-sm;
				}

				h4 {
					font-size: 0.95rem !important;
					font-weight: 600;
					margin-top: $spacing-md;
					margin-bottom: $spacing-xs;
				}

				h5,
				h6 {
					font-size: 0.8rem !important;
					font-weight: 600;
					margin-top: $spacing-sm;
					margin-bottom: $spacing-xs;
				}

				// Ensure strong/bold text is smaller than title (1.875rem)
				// Set it to 1.2rem to match body text
				strong,
				b {
					font-weight: 600;
					font-size: 1.2rem !important;
				}

				// Ensure paragraphs and other text elements use 1.2rem
				p,
				li,
				td,
				th {
					font-size: 1.2rem;
					line-height: 1.7;
				}
			}

			.title {
				margin-bottom: $spacing-md;
				padding: 0;
				text-align: left;
				line-height: 1.3;

				h1 {
					margin: 0 0 $spacing-sm 0;
					font-size: $font-size-3xl !important;
					font-weight: 600;
				}
			}

			.date {
				margin-bottom: $spacing-lg;
				color: rgb(var(--gray));
				font-size: $font-size-sm;
				display: flex;
				align-items: center;
				gap: $spacing-sm;
				flex-wrap: wrap;

				.last-updated-on {
					font-style: italic;
				}
			}

			.tags {
				display: flex;
				flex-wrap: wrap;
				gap: $spacing-sm;
				margin: $spacing-lg 0;
				justify-content: flex-start;
			}

			.tag {
				@include tag-style();

				&:hover {
					background: rgba(255, 140, 105, 0.9);
					border-color: rgba(255, 140, 105, 0.4);
					color: white;
				}
			}

			.author {
				color: rgb(var(--gray));
				font-style: italic;
				font-size: $font-size-sm;
				margin: 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="prose">
					<div class="title">
						<h1>{title}</h1>
						<div class="date">
							<span>Published on <FormattedDate date={pubDate} /></span>
							{author && <span class="author">By {author}</span>}
							{
								updatedDate && (
									<span class="last-updated-on">
										{' â€¢ '}Last updated on <FormattedDate date={updatedDate} />
									</span>
								)
							}
						</div>
					</div>
					{heroImage && (
						<div class="hero-image">
							<Image width={720} height={360} src={heroImage} alt="" />
						</div>
					)}
					{tags && tags.length > 0 && (
						<div class="tags">
							{tags.map(tag => (
								<a href={`/blog/tag/${tag}`} class="tag">{tag}</a>
							))}
						</div>
					)}
					<hr />
					<slot />
					{postSlug && <Comments postSlug={postSlug} />}
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
